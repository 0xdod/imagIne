<section id="image-card" class="card border border-primary mb-4">
	<div class="card-header bg-primary text-white">
		<span class="font-weight-bold">{{ image.title }}</span>
	</div>
	<div class="card-body">
		<p class="">{{ image.description }}</p>
		<div class="col-md-12 text-center">
			<img
				src="{{image.url}}"
				alt=""
				class="img-thumbnail"
			/>
		</div>
	</div>
	<div class="card-footer">
		<div class="row">
			<div class="col-md-8">
				<span
					class="text-danger"
					id="btn-like"
					data-id="{{ image.uniqueID }}"
				>
					<i class="fas fa-heart"></i>
				</span>
				<strong class="likes-count">{{ image.likes }}</strong> &nbsp;-&nbsp;
				<i class="fa fa-eye"></i>
				<strong>{{ image.views}}</strong> &nbsp; - &nbsp;
				Posted: <em class="text-muted">{{timeago image.timestamp }}</em>
			</div>
			<div class="col-md-4 text-right">
				<span class="text-danger" id="btn-delete" data-id="{{ image.uniqueID }}">
					<i class="fas fa-trash-alt"></i>
				</span>
			</div>
		</div>
	</div>
</section>

<section id="comments-card" class="card mb-4">
	<div class="card-header">
		<div class="row">
			<div class="col-md-8">
				<strong>Comments</strong>
			</div>
			<div class="col-md-4 text-right">
				<button
					class="btn btn-sm btn-light"
					id="btn-comment"
					data-id="{{ image.uniqueID }}"
				>
					<i class="fa fa-comments"></i>
					Leave a Comment...
				</button>
			</div>
		</div>
	</div>
	<div class="card-body" style="word-wrap: normal;">
		<blockquote class="blockquote" id="post-comment">
			<div class="row">
				<form method="POST" action="/images/{{ image.uniqueID }}/comment" class="col-sm-12">
					<div class="form-group row col-sm-12">
						<label for="name" class="col-sm-2 col-form-label control-label">Name:</label>
						<div class="col-sm-10">
							<input
								type="text"
								name="name"
								class="form-control"
							/>
						</div>
					</div>
					<div class="form-group row col-sm-12">
						<label
							for="email"
							class="col-sm-2 col-form-label control-label"
						>Email:</label>
						<div class="col-sm-10">
							<input
								class="form-control"
								type="text"
								name="email"
							/>
						</div>
					</div>
					<div class="form-group row col-sm-12">
						<label class="col-sm-2 col-form-label control-label" for="comment"
							>Comment:</label
						>
						<div class="col-sm-10">
							<textarea
								class="form-control"
								name="comment"
								rows="2"
							></textarea>
						</div>
					</div>
					<div class="form-group row col-sm-12">
						<div class="col-sm-12 text-right">
							<button
								type="submit"
								id="comment-btn"
								class="btn btn-success"
								type="button"
							>
								<i class="fa fa-comment"></i>
								Post
							</button>
						</div>
					</div>
				</form>
			</div>
		</blockquote>

		<ul class="media-list">
			{{#each comments}}
			<li class="media mb-2" id="{{_id}}">
				<a class="pull-left" href="#">
					<img
						class="media-object img-circle mr-2"
						src="http://www.gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45"
					/>
				</a>
				<div class="media-body">
					<strong class="media-heading">{{ name }}</strong>
					<small class="text-muted">{{ timeago timestamp }}</small>
					<br />
					{{ comment }}
				</div>
			</li>
			{{/each}}
		</ul>
	</div>
</section>

