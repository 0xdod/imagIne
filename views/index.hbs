{{#> main}}

<div class="col-md-12 text-right">
	<button class="btn btn-success text-white mb-2" id="new-upload-button">
		<i class="fa fa-plus"></i>
		New
    </button>
</div>

<section id="upload-form-section" class="card border border-primary mb-4">
	<div class="card-header bg-primary text-white">
		<h3 class="mb-0">
			Upload an Image
		</h3>
	</div>
	<form id="upload-new-form" action="/images" method="POST" enctype="multipart/form-data">
		<div class="card-body">
			<div class="form-group row col-md-12">
				<label for="file" class="col-md-2 col-form-label control-label"
					>Browse:</label
				>
				<div class="col-md-10">
					<input
						type="file"
						name="file"
						id="file"
						class="form-control"
						required
					/>
				</div>
			</div>
			<div class="form-group row col-md-12">
				<label
					for="title"
					class="col-md-2 col-form-label control-label"
				>
					Title:
				</label>
				<div class="col-md-10">
					<input type="text" name="title" class="form-control" required />
				</div>
			</div>
			<div class="form-group row col-md-12">
				<label
					style="word-wrap: normal;"
					class="col-md-2 col-form-label control-label"
					for="description"
					>Description:
				</label>
				<div class="col-md-10">
					<textarea
						name="description"
						id=""
						cols="30"
						rows="2"
						class="form-control"
					></textarea>
				</div>
			</div>
			<div class="form-group row col-md-12">
				<div class="col-md-12 text-right">
					<button
						class="btn btn-success"
						type="submit"
						id="submit-btn"
					>
						<i class="fa fa-cloud-upload-alt"></i>
						Upload Image
					</button>
				</div>
			</div>
		</div>
	</form>
</section>

<section class="card mb-4">
	<div class="card-header">
		<h3 class="mb-0">
			Latest Images
		</h3>
	</div>
	<div class="card-body row row-cols-1 row-cols-md-3 mr-0 ml-0">
		{{#each images}}
		<div class="col-md-4 text-center" style="padding-bottom: 1em;">
			<a href="/images/{{ uniqueID}}"
				><img
					src="/public/upload/{{filename}}"
					alt="{{title}}"
					style="width: 175px; height: 175px;"
					class="img-thumbnail"
			/></a>
		</div>
		{{/each}}
	</div>
</section>

{{/main}}
