<div class="card mb-4">
	<div class="card-header">
		<h3 class="mb-0">
			Most Popular
		</h3>
	</div>
	<div class="card-body">
		{{#each sidebar.popular}}
		<div class="col-md-12 row" style="padding-bottom: 0.5em;">
			<a class="pull-left" href="/images/{{uniqueID}}">
				<img
					src="/public/upload/{{filename}}"
					style="width: 75px; height: 75px;"
					class="img-thumbnail"
			/></a>
			<div class="ml-1">
				<strong>{{ title}} </strong>
				<br />
				<small
					><em class="text-muted">{{ timeago timestamp }}</em></small
				>
			</div>
		</div>
		{{/each}}
	</div>
</div>
