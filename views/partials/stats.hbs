<div class="card mb-4">
	<div class="card-header">
		<h3 class="mb-0">
			Stats
		</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-4 text-left">Images:</div>
			<div class="col-md-8 text-right">{{ sidebar.stats.images }}</div>
		</div>
		<div class="row">
			<div class="col-md-4 text-left">Comments:</div>
			<div class="col-md-8 text-right">{{ sidebar.stats.comments }}</div>
		</div>
		<div class="row">
			<div class="col-md-4 text-left">Views:</div>
			<div class="col-md-8 text-right">{{ sidebar.stats.views }}</div>
		</div>
		<div class="row">
			<div class="col-md-4 text-left">Likes:</div>
			<div class="col-md-8 text-right">{{ sidebar.stats.likes }}</div>
		</div>
	</div>
</div>
